<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    android:orientation="vertical"
    tools:context=".Information">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorWhite"
        android:orientation="vertical">


        <!--
        Большая надпись сверху
        -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_backside">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_text_upper"
                android:fontFamily="@font/aref_ruqaa"
                android:gravity="center"
                android:text="О центре"
                android:textColor="@color/ColorBlack"
                android:textSize="32dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  Полное наименование: Государственное бюджетное учреждение «Комплексный центр социального обслуживания населения Ничегородского района города Нижнего Новгорода» "
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  Сокращенное наименование: ГБУ «КЦСОН Нижегородского района г. Н.Новгорода»"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  Дата государственной регистрации: 05.09.2003 г."
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </LinearLayout>


        <!--
        Большая надпись ниже
        -->


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text_upper"
                android:fontFamily="@font/aref_ruqaa"
                android:gravity="center"
                android:text="Задачи и функции"
                android:textColor="@color/ColorBlack"
                android:textSize="32dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  Основной целью работы  учреждения является организация полустационарного и нестационарного социального обслуживания населения Нижегородского района.\n
    В том числе социального обслуживания на дому граждан пожилого возраста и инвалидов, нуждающихся в услугах, в соответствии с их возрастом и состоянием здоровья.\n
    А так же оказание отдельным категориям граждан помощи в реализации законных прав и интересов, содействие в улучшении их социального и материального положения, а также психологического состояния."
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text_upper"
                android:fontFamily="@font/aref_ruqaa"
                android:gravity="center"
                android:text="Реквизиты учреждения"
                android:textColor="@color/ColorBlack"
                android:textSize="32dp" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/inn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  ИНН: 5260122497"
                android:textColor="@color/colorPrimary"
                android:textSize="23dp"

                />

            <TextView
                android:id="@+id/ogrn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  ОГРН: 1035205411328"
                android:textColor="@color/colorPrimary"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/okpo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  ОКПО: 70380582"
                android:textColor="@color/colorPrimary"
                android:textSize="23dp"

                />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_text">

            <TextView
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@drawable/background_text_upper"
                android:fontFamily="@font/aref_ruqaa"
                android:gravity="center"
                android:text="В начало"
                android:textColor="@color/ColorBlack"
                android:textSize="32dp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>